datasource chinook {
  provider = "postgres"
  url      = "postgresql://postgres:prisma@localhost:5432/db"
}

model ModelA {
  id   Int     @id
  b_id Int
  b    ModelB  @relation(fields: [b_id], references: [id])
  c    ModelC?
}

model ModelB {
  id Int     @id
  a  ModelA?

  c_id Int
  c    ModelC @relation(fields: [c_id], references: [id])
}

model ModelC {
  id Int @id

  b ModelB?

  a_id Int
  a    ModelA @relation(fields: [a_id], references: [id])
}
